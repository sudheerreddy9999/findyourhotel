<%- include("../partials/header") %>


    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit
                <%= camp.name %>
            </h1>
            <div style="width:30%; margin:30px auto;">
                <form action="/Hotels/<%= camp._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="camp[name]" value=" <%= camp.name %>  ">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="camp[image]" value=" <%= camp.image %>  ">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="camp[description]" value=" <%= camp.description %>  ">
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input class="form-control" type="text" name="camp[location]" id="location" value="<%= camp.location %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-block btn-lg btn-success" type="submit">Submit! </button>
                    </div>
                </form>
                <a href="/Hotels">Go Back</a>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>