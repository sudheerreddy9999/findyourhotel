<%- include("../partials/header") %>


    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Add a new comment to
                <%= camp.name %>
            </h1>
            <div style="width:30%; margin:30px auto;">
                <form action="/Hotels/<%= camp._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment" placeholder="Comment">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-block btn-lg btn-success" type="submit">Submit! </button>
                    </div>
                </form>
                <a href="/Hotels">Go Back</a>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>